<script>
	
		function peticion(cual){
			$.ajax({
				type:"POST",
				url:"Control?consulta=1",
				dataType:"xml",
				succes:function(xml){
				$(xml).find('mensaje').each(function(){
					var texto=$(this).text();
					console.log(texto);
					$("#restultados").append(texto);
				});
				}
			});
		}
	
</script>
<body >
	<a href="#" onclick="peticion(1)">Nombre</a>
